// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id String @id @default(uuid())
  firstName String 
  middleName String
  lastName String
  email String? @unique
  phone Int? @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  userPreference UserPreferences?
  reservations Reservations[]
}

model UserPreferences{
  id String @id @default(uuid())
  receiveEmailUpdates Boolean @default(false)
  receivePhoneUpdates Boolean @default(false)
  user User @relation(fields: [userID], references: [id])
  userID String @unique
}

model Products{
  id String @id @default(uuid())
  name String @unique
  imgUrl String?
  description String @default("N/A")
  isAvailable Boolean
  categoryID String
  category MenuCategories @relation(fields: [categoryID], references: [id], onUpdate: Cascade)
  @@index([categoryID])
}

model MenuCategories{
  id String @id @default(uuid())
  name String @unique
  product Products[]
}

model Reservations{
  id String @id @default(uuid())
  userID String @unique
  reservationID String @unique
  reserver User? @relation(fields: [reservationID], references: [id])
}

enum Role {
  USER
  ADMIN
}
